{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        // "module": "commonjs",
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "ES5",
        "lib": [
            "dom",
            "es2015",
            "es6"
        ],
        /* Type declaration files to be included in compilation. */
        "types": [
            "./src/@types/**"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
