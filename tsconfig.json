{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        // "module": "commonjs",
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "ES5"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
